<button  onclick=" Choice= Game();
   
    if(Choice==='Ball'){ 
          resultmsg='computer won';}
    else if (Choice==='Bat'){ 
        resultmsg= 'user won';}
    else if(Choice==='Stump')
    { resultmsg= 'its tie';}
