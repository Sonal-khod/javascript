">Stump</button>
 <script>
let Choice;
function Game(){
let Number= Math.random() *3;
let number=Math.round(Number)
// console.log(` value=${number}`)

if( number>0 && number<=1)
    {
            return'Bat';
    }else if(number>1 && number<=2)
    {
         return'Ball';
    }else  if(number>2 && number<=3)
    {
         return'Stump';
    } 
}
 </script>   
